<div class="container" ng-app="inception" ng-controller="formController">
  <div class="row">

    <form class="form col-sm-12 col-md-6 col-md-offset-3" ng-hide="done" name="myForm" validate>

      <div class="row">

        <div ng-show="invalid" class="msg"><span>*Please complete all fields: Full Name, Email, Project Repo, Project URL.</span></div>
        <div class="form-group col-sm-12 col-md-12">
          <input ng-class="{'has-error': myForm.full_name.$invalid && myForm.full_name.$touched}" ng-model="user.full_name" class="form-control" placeholder="full name" id="full_name" type="text" class="validate" name="full_name" required>
        </div>

        <div class="form-group col-sm-12 col-md-12">
         <input ng-class="{'has-error': myForm.email.$invalid && myForm.email.$touched}" ng-model="user.email" class="form-control" id="email" placeholder="email" type="email" class="validate" name="email" required>
       </div>

       <div class="form-group col-sm-12 col-md-12">
         <input ng-class="{'has-error': myForm.project_repo.$invalid && myForm.project_repo.$touched}" ng-model="user.project_repo" class="form-control" placeholder="project repo" id="project_repo" type="text" class="validate" name="project_repo" ng-change="url('project_repo')" required>
       </div>

       <div class="form-group col-sm-12 col-md-12">
         <input ng-class="{'has-error': myForm.project_url.$invalid && myForm.project_url.$touched}" ng-model="user.project_url" class="form-control" placeholder="project url" id="project_url" type="text" class="validate" name="project_url"  required>
       </div>

      <!-- ratings  -->
      <div class="form-group col-md-12 rate" ng-repeat="rating in ratings">
        <div class="row">
          <div class="col-xs-8 col-md-8 valign">
            <span class="rate-title">{{rating.name | uppercase}}:</span>
          </div>
          <div class="col-xs-4 col-md-2 col-md-offset-2">
            <input class="form-control" id="" type="number" ng-model="rating.rating" ng-change="updateRating(rating.rating)" class="validate">
          </div>
        </div>
      </div>
      <div class="form-group col-sm-12 col-md-12 text-right">
        <span>Points Total: {{tally}}</span>
      </div>
       <div class="form-group col-sm-12 col-md-12">
         <button class="form-control btn btn-default" ng-click="addUser()" >SUBMIT</button>
       </div>
      </div>
    </form>
    <form class="form final-form col-sm-12 col-md-7 col-md-offset-2" ng-show="done">
      <img class= "email-logo" src="http://trimagency.com/wp-content/uploads/2015/04/0.png" alt="email logo" />
      <hr class="detail">
      <h2 class="email-head">Thank you for your submission! </h2>
      <div class="col-md-5 col-md-offset-4">
        <button ng-click="newSubmission()" type="button" name="button">Submit another project</button>
      </div>
    </form>

  </div>
</div>

